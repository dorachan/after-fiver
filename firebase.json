{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "headers": [
      {
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ],
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ],
        "source": "**/*.@(jpg|jpeg|gif|png)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=60"
          }
        ],
        "source": "**/*.@(js|html|css)"
      },
      {
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=300"
          }
        ],
        "source": "404.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "public": "."
  }
}